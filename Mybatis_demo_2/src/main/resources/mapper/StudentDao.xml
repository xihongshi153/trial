<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.StudentDao">
    <insert id="Insert" parameterType="com.entity.Student">
        insert into student(sno,name,age,college) values(#{sno},#{name},#{age},#{college})
    </insert>

    <select id="findAll" resultType="com.entity.Student">
        select * from student
    </select>
    <delete id="deleteBySno" parameterType="String">
        delete from student where sno=#{sno}
    </delete>

    <select id="findBySno" parameterType="String" resultType="com.entity.Student">
        select * from student where sno=#{sno}
    </select>
    <update id="updateBySno" parameterType="com.entity.Student">
        update student set name = #{name},age=#{age},college=#{college} where sno=#{sno}
    </update>
</mapper>